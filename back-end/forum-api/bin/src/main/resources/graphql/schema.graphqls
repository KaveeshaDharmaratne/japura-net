type Query {
    me: User
    getPostById(id: ID!): ForumPost
    getAllPosts: [ForumPost]
}

type User {
    uid: ID!
    email: String
}

type Mutation {
    createPost(title: String!, content: String!): ForumPost
}

type ForumPost {
    id: ID!
    title: String!
    content: String!
    author: User
    createdAt: String
    updatedAt: String
}