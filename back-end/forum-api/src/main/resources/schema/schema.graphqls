input SignupInput {
    firstName: String!
    lastName: String!
    faculty: String!
    email: String!
    password: String!
    confirmPassword: String!
}

type AuthPayload {
    token: String! #Firebase Custom Token generated by the backend
    user: User!
}

type User {
    id: ID! # Store the Firebase UID
    firstName: String!
    lastName: String!
    faculty: String!
    email: String!
}

type Query {
    me: User
}

type Mutation {
    signup(input: SignupInput!): AuthPayload!
}
